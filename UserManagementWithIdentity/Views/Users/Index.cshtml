@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<a class="btn btn-primary"  asp-action="Add">Add New</a>

<table class="table table-striped mt-3">
    <thead>
        <tr class="bg-primary text-white">
            <th>UserName</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-action="ManageRoles" asp-controller="Users" asp-route-userId="@user.Id"> Roles</a>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Users" asp-route-userId="@user.Id">Profile </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Users" asp-route-userId="@user.Id">Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
